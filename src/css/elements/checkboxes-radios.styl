    // Styleguide elements.checkboxesradios.basic

    .field__radio ,
    .field__checkbox {
        display: block;
        font-size: 14px;
        margin-bottom: 0.5em;

        // Base for label styling
        input[type="checkbox"],
        input[type="radio"] {
            position: absolute;
            left: -9999px;
        }

        input[type="checkbox"] + label,
        input[type="radio"] + label {
            position: relative;
            padding-left: 25px;
            cursor: pointer;
        }

        // checkbox aspect 
        // ------------------------

        input[type="checkbox"] + label:before ,
        input[type="radio"] + label:before {
            content: '';
            position: absolute;
            left: 0; 
            top: 2px;
            width: 16px; 
            height: 16px;
            border: 1px solid grey6;
            background: grey9;
            border-radius: base-border-radius;
            box-shadow: inset 0 1px 3px rgba(0,0,0,.1)
        }

        input[type="checkbox"]:checked + label:before ,
        input[type="radio"]:checked + label:before {
            background-color: primary;
            border-color: primary;
        }

        // checked mark aspect

        input[type="checkbox"] + label:after {
            content: icon-check;
            font-family: font-icon;
            position: absolute;
            top: 0px;
            left: 0px;
            font-size: 12px;
            color: white;
            transition: all 0.2s;
            width: 16px;
            height: 16px;
            line-height: 16px;
            text-align: center;
            border-radius: base-border-radius;
        }


        // Radio aspect 
        // ------------------------

        input[type="radio"] + label:before {
            border-radius: 100%;
        }

        // radio mark aspect

        input[type="radio"] + label:after {
            content: '';
            position: absolute;
            top: 6px;
            left: 4px;
            background-color: white;
            transition: all 0.2s;
            width: 8px;
            height: 8px;
            border-radius: 100%;
        }

        // mark aspect changes 

        input[type="checkbox"]:not(:checked) + label:after ,
        input[type="radio"]:not(:checked) + label:after {
            opacity: 0;
            transform: scale(0);
        }

        input[type="checkbox"]:checked + label:after ,
        input[type="radio"]:checked + label:after {
            opacity: 1;
            transform: scale(1);
        }

        // disabled  

        input[type="checkbox"]:disabled + label:before ,
        input[type="radio"]:disabled + label:before {
            box-shadow: none;
            border-color: grey7;
            background-color: grey7;
        }
        
        input[type="checkbox"]:disabled:checked + label:after {
            color: grey5;
        }

        input[type="radio"]:disabled:checked + label:after {
            background-color: grey5;
        }

        input[type="checkbox"]:disabled + label ,
        input[type="radio"]:disabled + label {
            color: grey5;
        }

        // accessibility

        input[type="checkbox"]:focus + label:before ,
        input[type="radio"]:focus + label:before {
            border: dotted 1px primary;
        }

        // hover style just for information

        input[type="checkbox"]:not(:disabled) + label:hover:before ,
        input[type="radio"]:not(:disabled) + label:hover:before {
            border: 1px solid primary !important;
        }

 
    }

    
    // Error styles for invalid checkboxes

    .submitted {
        .ng-invalid[type="checkbox"]:not(:disabled) + label:before ,
        .ng-invalid[type="radio"]:not(:disabled) + label:before {
            border-color: negative;
            background-color: lighten(negative, 95%);
        }
    }


