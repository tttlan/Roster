    // Styleguide elements.checkboxesradios.toggles

    .field__toggle {
        display: block;
        min-height: 26px;
        min-width: 44px;

        input {
            position: absolute;
            left: -999em;

            &:checked ~ label:before {
                background-color: positive;
            }

            &:checked ~ label:after {
                margin-left: 23px;
            }
        }

        input ~ .form__label {
            position: relative;
            line-height: 1.6em;
            text-indent: 4em;
            margin: 0.2em 0;
            cursor: pointer;
            user-select: none;

            &:before ,
            &:after {
                position: absolute;
                display: block;
                top: 0;
                left: 0;
                content: 'OFF';
                width: 44px;
                height: 22px;
                background-color: grey6;
                border-radius: 22px;
                transition: all 100ms ease-in;

                // experimental text
                text-align: center;
                line-height: 22px;
                text-indent: 18px;
                font-size: 8px;
                color: white;
            }

            &:after {
                width: 20px;
                height: 20px;
                top: 1px;
                margin-left: 1px;
                background-color: white;
                border-radius: 20px;
                box-shadow: 1px 2px 5px rgba(0,0,0,0.2);

                // experimental text
                content: 'ON';
                line-height: 20px;
                text-indent: -40px;
            }

        }
    }

    .field__toggle--align-right {

        input ~ .form__label {
            
            text-indent: 0;

            &:before, 
            &:after {
                left: auto;
                right: 0;
            }
        }

        input {

            ~ label:after {
                margin-right: 23px;
                content: 'OFF';
            }

            &:checked ~ label:after {
                margin-right: 0;
            }
        }
    }
