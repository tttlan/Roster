.ui
    .video {
        position:relative;
        overflow:hidden;

        &.is--playing {
            .video__play{ display:none; }
        }
    }
    video {
        img();
        min-height:300px;
    }
    .video__play {
        position:absolute;
        z-index:2;
        top:0;
        left:0;
        width:100%;
        height:100%;
        background:rgba(0,0,0,0.5);
        text-indent:105%;
        &:before,
        &:after {
            content:'';
            position:absolute;
            top:50%;
            left:50%;
        }
        &:after {
            z-index:2;
            width:0;
            height:0;
            margin: -20px 0 0 -8px;
            border: 20px solid transparent;
            border-left: 25px solid grey2;
            border-right: 0;
        }
        &:before {
            width:80px;
            height:80px;
            margin:-40px 0 0 -40px;
            background:#fff;
            border-radius:50%;
        }

    }

    canvas {
        img();
        display:block;
        margin:0 auto;
    }

    .pdf__frame {
        width:100%;
        height:600px;
        margin:0 auto;
        border:none;
    }

    .youtube__wrapper {
        float: none;
        clear: both;
        width: 100%;
        position: relative;
        padding-bottom: 56.25%;
        padding-top: 25px;
        height: 0;
    }

    .youtube__player {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
    }
