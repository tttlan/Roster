    // Groups of buttons
    // 
    // Markup:
    // <div class="button-group">
    //     <button class="button">Save</button>
    //     <button class="button button--positive">Publish</button>
    //     <button class="button button--caution button--icon"><i class="icon--bin"></i></button>
    // </div>
    //
    // Styleguide elements.buttons.groups

    .button-group {
        .buttons,
        .button {
            margin-bottom: 10px;
            margin-right: 10px;
        }

        .buttons .button {
            margin: 0;
        }

        .button + .button {
            margin-left: 0;
        }
    }

    // Bar of buttons
    // 
    // Markup:
    // <div class="buttons">
    //     <a href="" class="button">One</a>
    //     <a href="" class="button">Two</a>
    //     <a href="" class="button">Three</a>
    // </div>
    // <div class="buttons">
    //     <a href="" class="button button--icon"><i class="icon--star"></i></a>
    //     <a href="" class="button button--icon"><i class="icon--pencil"></i></a>
    //     <a href="" class="button button--icon"><i class="icon--comment"></i></a>
    // </div>
    //
    // Styleguide elements.buttons.bar

    .buttons {
        display: inline-block;
        vertical-align: middle;
        clearfix();
        list-style:none;

        &.dropdown {
            position:relative;
        }
        
        .button:first-child {
            border-left: none;
        }

        .button {
            float: left;
            border-radius: 0em;
            margin-right: 1px;
        }

        .button:first-child  {
            margin-left: 0em;
            border-top-left-radius: button_border_radius;
            border-bottom-left-radius: button_border_radius;
        }

        .button:last-child {
            border-top-right-radius: button_border_radius;
            border-bottom-right-radius: button_border_radius;
        }

        .button + .button {
            margin-left: 0;
        }

    }

    .button + .button,
    .buttons + .button,
    .buttons + .buttons {
        margin-left: 5px;
    }
    
    
    // Button with text
    //
    // Markup:
    // <div class="button-withtext">
    //     <button class="button button--positive button--icon-right">Save and Continue <i class="icon--right"></i></button>
    //     <a href="" class="button-text">or save and exit</a>
    // </div>
    //
    // Styleguide elements.buttons.buttonwithtext

    .button-withtext {
        display: inline-block;
        position: relative;
        padding-bottom: (gutter/2);

        .button-text {
            position: absolute;
            top: 40px;
            left: 8px;
        }
    }

    .button-text {
        font-size: 13px;
        color: grey5;
        border-bottom: 1px dashed grey7;

        &:hover {
            border-bottom: 1px solid grey7;
        }
    }


    // Hit area
    // 
    // Markup:
    // <a href="" class="button-hitarea">
    //     <i class="icon--search icon-is-huge"></i>
    //     <h2>Click to do something</h2>
    //     <p>More information</p>
    // </a>
    //
    // Styleguide elements.buttons.hitarea

    .button-hitarea {
        margin: 0 0 (gutter/2) 0;
        display: block;
        color: black;
        border: dashed 1px grey7;
        padding: 15% 0;
        font-size: 16px;
        text-align: center;
        border-radius: 4px;

        p {
            color: grey5;
        }

        &:hover {
            color: link-color-hover;
            background: grey9;
        }
    }
    
    // Form element as a button
    // ------------------------------------------------

    .button-form {
        display: inline-block;
    }
    

    // Toggle Disable - for form submissions
    // Used by the disable-toggle directive

    .disable-toggle {
        transition: width 125ms ease-in-out;
    }

    .disable-toggle__loader {
        loader(12px, #fff)
        margin-right:10px;
    }
