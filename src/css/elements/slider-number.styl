.ui
    slider {
        display: inline-block;
        position: relative;
        height: 7px;
        width: 100%;
        margin: 25px 5px 25px 5px;
        vertical-align: middle;
    }
    slider span {
        white-space: nowrap;
        position: absolute;
        display: inline-block;
    }
    slider span.base {
        width: 100%;
        height: 100%;
        padding: 0;
    }
    slider span.bar {
        width: 100%;
        height: 100%;
        z-index: 0;
        border-radius: 10px;
        background: #94b86e;
    }
    slider span.bar.selection {
        
    }
    slider span.pointer {
        cursor: pointer;
        width: 30px;
        height: 30px;
        top: -12px;
        background-color: #c7c7c7;
        z-index: 2;
        border-radius: 50%;
    }
    slider span.pointer:after {
        content: '';
        background-color: white;
        width: 28px;
        height: 28px;
        position: absolute;
        top: 0;
        left: 0;
        margin-left: 1px;
        background-color: #fff;
        border-radius: 50%;
        box-shadow: 1px 2px 5px rgba(0,0,0,0.2);
        line-height: 28px;
    }
    slider span.pointer:hover:after {
    }
    slider span.pointer.active:after {
    }
    slider span.bubble {
        cursor: default;
        top: -35px;
        padding: 1px 3px;
        font-size: 14px;
        color: notify;
    }
    slider span.bubble.selection {
    }
    slider span.bubble.limit {
        color: notify;
    }
    .slider-number {
        width: 400px;
        background: white;
        padding: 10px;
        border: 1px solid;
        border-radius: 4px;
        border: 1px solid rgba(0,0,0,0.15);
        box-shadow: 0 6px 12px rgba(0,0,0,0.175);
    }
    .slider-number slider {
        margin-left: 0;
    }
