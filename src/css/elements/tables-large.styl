.ui

    .table-large {

        width: 100%;
        border-collapse: collapse;
        font-size: 14px;
        margin: 0;
        background: white;
        border: solid 1px table-border-color;
        border-radius: base-border-radius;

        [class*="icon--"] {
            font-size: 16px;
        }


        th {
            text-align: left;
            padding: 14px 18px;
            font-size: 11px;
            line-height: 20px;
            text-transform: uppercase;
            vertical-align: bottom;

            border-bottom: 1px solid table-border-color;

            color: loud-color;
            font-weight: light;

            // Table Header Icons
            [class*="icon--"] {
                margin: 0;
                font-size: 14px;
                vertical-align: text-bottom;
            }

            .icon--down {
                font-size: 10px;
                margin-left: 0.6em;
                vertical-align: middle;
            }
        }

        td {
            border-bottom: solid 1px grey8;
            padding: 22px 18px;
            color: grey4;

            &:first-child {
                color: grey3;
                font-size: 18px;
                width: 50%;

                .label {
                    margin-right: .3em;
                }

                > [class*="icon--"] {
                    margin-right: 12px;
                    font-size: 16px;
                }
            }

            &:last-child {
                text-align: right;
                white-space: nowrap;
            }

            .label {
                margin: 0;
            }
        }


        // Expandable
        // ------------------------------------------------   

        .expandable {
            display: none;
            border: solid 1px #f3f3f3;

            .table {
                border: none;
            }

            >td:first-child {
                padding: 0;
                width: auto;
            }

            >td:last-child {
                text-align: left;
            }
        }

        .is--open { 
            .expandable {
                display: table-row;
            }
        }


        // Reset basic table
        // ------------------------------------------------ 

        .table {
            font-size: 14px;
            margin: 0;
            background: grey10;
            box-shadow: inset 0 10px 10px -10px rgba(0,0,0,0.05);

            th {
                border-top: 0px;
            }

            tr:last-child td {
                border-bottom: 0;
            }

            td:first-child {
                font-size: 14px;
            }
        }

    }


    // Responsive
    // ------------------------------------------------   

    @media maxTablet {
        .table-large {
            background: transparent;
            border: 0px;

            thead {
                display: none;
            }

            tbody {
                margin: 0 0 10px 0;
                display: block;
            }

            tr {
                segment();
                display: block;
                margin: 0;
            }

            td {
                padding: 10px 10px 0 0;
                width: 50%;
                border-bottom: 0;
            }

            td:first-child {
                display: block;
                width: 100% !important;
                padding: 0;
            }

            .expandable {
                padding: 0;
                border-radius: 0 0 0.2em 0.2em;
                border-top: 0;
            }

            .is--open {

                tr {
                    border-radius: 0.2em 0.2em 0 0;
                }

                .expandable {
                    border-radius: 0 0 0.2em 0.2em;
                    display: block;
                }

            }

        }
    }
