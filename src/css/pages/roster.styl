    .shift__details--confirmed {
        border-color:positive;
    }
    .shift__details--rejected {
        border-color:positive;
    }
    .shift__details--notified {
        border-color:caution;
    }
    .shift__icon {
        position:absolute;
        top:20px;
        right:15px;
    }

    .shift__preview {
        display:block;
        padding:15px 15px 15px 12px;
        text-decoration:none;
        &:hover { text-decoration:none; }

        span {
            font-weight:bold;
        }
        small {
            display:block;
            font-size:0.6em;
            line-height:0.6;
        }

    }
    .shift__additional-content {
        display:none;
    }