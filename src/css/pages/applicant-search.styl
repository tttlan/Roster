.ui
  .applicant-search
    background-color: white
    padding: 0 0 20px

    &__results
      cursor: pointer
      list-style: none
      padding: 0

      &--selected
        background-color: #F0F3FA

      li
        padding: 5px 0 5px 10px

        &:not(:first-child)
          border-width: 1px 0 0
          border-color: #F3F4F5
          border-style: solid


        .name-tag
          color: #515151
          
          &__badge
            color: white
            margin-right: 5px
            background-color: red
            border-radius: 50px
            padding: 2px
            font-size: 12px
            width: 25px
            height: 25px
            text-align: center
            overflow: hidden
            display: inline-block
            float: left

            &--0
              background-color: #0074D9
            &--1
              background-color: #7FDBFF
            &--2
              background-color: #39CCCC
            &--3
              background-color: #3D9970
            &--4
              background-color: #01FF70
            &--5
              background-color: #FFDC00
            &--6
              background-color: #85144b
          
          .remove-icon
            color: red
            float: right
            margin-right: 20px
      
    .loading-spinner
      color: #999