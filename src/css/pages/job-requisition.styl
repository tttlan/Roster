.ui {
  .job-requisition {

    .search-jobs-form__actions {
      text-align: center;
      width: 30%;
      @media minDesktop {
        /*position: absolute;
        top: 0;
        right: 0;*/
        float: right;
        margin-top: 20px;
        text-align: right;
      }
    }

    .search-jobs-form__tag-area {
      width: 70%;

      .tag {
        background-color: grey7;
        color: black;

        i {
          color: grey5;
        }
      }
    }

    .search-jobs-form__search-field {
      width: 100%;
      display: inline-block;
      border-bottom: solid 1px grey7;
      margin-bottom: 10px;
      .field__before {
        margin-top: -30px;
      }
      .field__before--search-icon {
        font-size: 40px;
        width: 0px;
        left: 0px;
      }

      .field__after {
        right: 0px;
      }

      .clear-search-requisition {
        i {
          font-size: 20px;
        }
        &:hover {
          color: negative;
        }
      }
    }

    /* .search-jobs-form__add-filter{
         display: inline-block;
         padding-top: 20px;
         font-size: 14px;
         margin-left: -25px;
         color: info;
     }*/

    .search-jobs-form__text-input {
      padding: 0 40px 0 60px;
      font-size: 30px;
      border: none;
      border-radius: 0px;
      background: transparent;
      height: 50px;
      width: 100%;

      &:focus {
        box-shadow: none;
      }
    }

    .search-jobs-form__text-input::-ms-clear, .search-candidate-form__text-input::-ms-reveal {
      display: none;
    }

    .table__list--requisitions {

      border: none;
      .bold {
        font-weight: bold;
      }

      thead {
        tr {
          th {
            background-color: default-body-color;
            font-size: 12px;
            font-weight: normal;
            color: grey4;
            .nav {
              a {
                color: grey4;

                &:hover {
                  color: primary;
                }
              }

              margin-bottom: -2px;
              float: right;
            }

            &:hover {
              cursor: pointer;
              color: primary;
              > i {
                color: primary;
              }
            }

            &:first-child { // column Position
              width: 30%;
            }

            &:nth-child(2) { // column Location
              width: 15%;
            }

            &:nth-child(3) { // column Elapse
              width: 15%;
            }

            &:nth-child(4) { // column Requestor
              width: 25%;
            }

            &:nth-child(5) { // column Status
              width: 15%;
            }
          }
        }
      }
      /* End of thead*/

      tbody {

        .requisition-name {
          font-weight: bold;
          color: primary;
          &:hover {
            border-bottom: 1px dashed default-border-color;
          }
        }

        .requisition-location,
        .requisition-elapse {
          color: grey4;
        }

        .requisition-status--date {
          font-size: 12px;
          color: grey4;
        }

        .label { // override default style
          font-size: 12px;
          font-weight: bold;
        }

      }
      /*End of tbody*/
    }
    /* End of table__list--requisitions */

    .mfb-component--br {
      margin: 0.5em  1em;
    }

    .table-form {
      th {
        vertical-align: middle;
      }
      .table-form__form-value {
        display: inline-block;
        text-transform: uppercase;
      }
      .table-form__edit--requisition {
        color: grey4;
        text-indent: 0;
        text-transform: uppercase;
        font-size: 11px;
        position: initial;
        margin-top: 4px;
        right: 22px;
        float: right;
        &:hover {
          color: primary;
        }
      }

      .relative {
        width: 400px;
        .typeahead__list {
          .typeahead__item {
            .typeahead__link {
              &:focus,
              &:hover {
                background-color: primary;
                color: white;
              }
            }
          }
        }

        .autocomplete::-ms-clear {
          display: none;
        }
      }
    }

    .no-borderCollapse {
      border-collapse: inherit;
    }

    .requisition-list--count {
      text-align: center;
      font-weight: bold;
      color: grey4;
    }

    .button--uppercase {
      text-transform: uppercase;
    }

    .button--transparent {
      background-color: transparent;
      &:active {
        box-shadow: none;
      }
    }

    .button--reject {
      color: primary;
    }

    .button-group__trash {
      margin-top: 1px;
      margin-left: 20px;
      &:hover {
        color: negative;
      }
    }

    .accordion--segment {
      h3 {
        text-transform: none;
        a {
          color: grey2;
          font-weight: bold;
        }
      }

      .form__fields {
        .form__field {
          .form__label {
            text-transform: uppercase;
          }
          .media {
            margin: 0;
            .media__body {
              line-height: 26px;
              overflow: visible;
            }
          }
          .field__checkbox {
            margin-left: 20px;
            &:first-child {
              margin: 0 !important;
            }
          }
          .other--benefit {
            input[type="text"] {
              width: 95%;
            }
            a {
              vertical-align: middle;
              color: positive;
            }
          }
          .disabled {
            input[type="text"] {
              border: none;
              padding-left: 0;
              color: grey4;
              pointer-events: none;
            }
            a {
              color: negative;
            }
          }
          .button--icon {
            > [class^="icon--"] {
              color: negative;
              vertical-align: top;
            }
          }
          .qualification {
            margin-bottom: 2px;
            input[type="text"] {
              pointer-events: none;
            }
          }
          .qualification--placeholder {
            input[type="text"] {
              border: 1px dashed grey4;
              pointer-events: auto;
            }
          }

          .external--advertising {
            border: 1px solid default-border-color;
            border-radius: 3px;
            background-color: grey6;
            height: 100px;
            .field__checkbox {
              float: right;
            }
          }
        }
        /*End of form__field*/
      }
      /*End of form__fields*/
    }
    /*End of accordion--segment*/
    .segments {
      .segment--borderTop {
        border-top: solid 1px default-border-color;
      }
    }
    .media {
      .media__body {
        .media__body-date {
          float: right;
          font-weight: bold;
        }
      }
    }
    .footer-action {
      bottom: 0;
      //    height: 60px;
      //    line-height: 55px;
      position: fixed;
      width: 100%;
      z-index: 10;
      background-color: white;
      border-top: 1px solid default-border-color;
      .content {
        margin: 0 auto;
        max-width: 1000px;
        min-width: 320px;
        padding: 0 20px;
        margin-top: 10px;
        .label {
          font-size: 11px;
          margin-bottom: 0;
          margin-right: 0;
        }
      }
      /*End of content*/
    }
    /*End of footer-action*/

    .request-change--section {
      height: auto;
      border-radius: 5px;
      background-color: grey3;
      margin-bottom: 20px;
      padding: 15px;
      label {
        text-transform: uppercase;
        //  color: caution;
        color: #FBA73B;
      }
      .media {
        .media__body {
          line-height: 26px;
          overflow: visible;
          a {
            color: white;
            &:hover {
              color: primary;
            }
          }

        }
      }
      p {
        color: white;
        font-size: 90%;
      }
    }
  }
  /*End of job-requisition*/

  .panel-search--filter {
    .title {
      font-weight: bold;
      color: grey4;
    }
    .label {
      font-size: 12px;
      cursor: pointer;
      color: grey5;
      margin-top: 5px;
    }
    .label--filter--active {
      background-color: primary;
      box-shadow: none;
      color: white;
    }
  }
  /*End of panel-search--filter*/

  .modal-requisition-template {
    .drawer__dialog {
      width: 400px;
      .panel-requisition--template {
        .form__field {
          input[type="text"] {
            border-top: none;
            border-left: none;
            border-right: none;
            border-radius: 0;
          }
        }
        .table__list--requisitions {
          .table__list--requisitions-name {
            line-height: 17px;
            a {
              font-weight: bold;
              color: grey3;
            }
            span {
              display: block;
              color: grey5;
            }

          }
          /*End of table__list--requisitions-name*/
          tr {
            th {
              &:hover {
                cursor: pointer;
                color: primary;
              }
            }
            td {
              i {
                color: grey5;
                &:hover {
                  color: primary;
                }
              }
            }
          }
          /*End of tr*/
        }
        /*End of table__list--requisitions*/

        .placeholder {
          text-align: center;
          text-transform: uppercase;
          color: grey6;
          border: 2px dashed grey6;
          font-weight: bold;
          padding: 20px;
        }
        /*End of placeholder*/
      }
      /*End of panel--requisition-template*/
    }
    /*End of drawer__dialog*/
  }
  /*End of modal-requisition-template*/
}

/*End of ui*/