.ui {
  .valign-text-top {
    vertical-align : text-top !important;
  }

  .job-details {
    .page-info {
      clearfix();
      border-radius: 5px;
      padding: 3%;
      margin-bottom: 15%;
      color: white;

      .page-info-header small {
        color: white;
      }

      .small-color{
        color: #a2a2a2 !important;
      }

      .page-info-content {
        padding: 2% 0% 3% 0%;
      }

      .page-info-footer {
        .button--basic {
          color: white;
          margin: 0;
        }
      }

      &--active {
        background-color: caution;
        padding-bottom: 35px;
      }

      &--published {
        background-color: positive;
      }

      &--closed {
        background-color: none;
        border: 1px solid grey6;

        .page-info-content {
          color: grey5;
        }
      }
    }

    .questionnaire {
      h1 {
        font-size: 20px;
        text-transform: uppercase;
        letter-spacing: normal;
      }
      h2 {
        font-size: 18px;
        color: #999;
      }
      &__description {
        font-size: 11px;
      }
      &__group {
        border: 1px solid #F3F4F5;
        padding: 5px 10px;

        h2 {
          font-size: 14px;
          color: inherit;
        }

        &__title {
          font-size: 14px;
        }

        &:not(:last-child) {
          margin-bottom: 10px;
        }
      }
    }
    .table-boards{
      .job-ads-header-image {
        width: auto;
        height: auto;
        max-width: 150px;
      }
      
      .job-ads-image {
        width: 75px;
        height: auto;
        max-height: 30px;
      }
      
      .logo-internal-website {
        position :relative
      }
      .logo-internal-website img {
        position: absolute;
        min-width: 90px;
        top: -20px;
        height: 45px;
      }
      .ad-note {
        display: inline;
        background-color: grey4;
        padding: 2px 10px 2px 10px;
        border-radius: 49px;
        color: grey8;
        font-size: 8px;
        position: absolute;
        top: -5px;
        left: 5px;
        opacity: 0.95;
        text-transform: uppercase;
        font-weight: bold;
      }
      .icon-datepicker-board{
        position: absolute !important;
        top: 12px !important;
        right: -10px !important;
      }

      .date-picker__job-boards {
        .icon--left, .icon--right  {
          margin: 0 !important;
        }

        .datepicker__table {
          th {
            border-bottom: none;
            width: 30px;
            overflow: hidden;
            color: #a2a2a2;
            font-weight: 300;
            text-align: center;
            line-height: 30px;
            height: 30px;
            font-size: 14px;
            padding: 0px;
          }

          td {
            padding: 0px !important;
            border-bottom: 0px;
          }
        }
      }/*date-picker__job-boards*/
      .icon--cross{
        position: absolute !important;
        top:-5px !important;
        right: -10px !important;
      }
    }
    
    .fixed-menu {        
        @media minDesktop {
            position: fixed;
            margin-left: 650px;
            width: 300px;
        }
    }
  }

  .table-form--wordwrap {
    width: 200px;
    min-width: 100px;
    word-break: break-word;
  }

  .permanently-close {
    &-well {
      ul {
        margin-left: -20px;
      }

      .red {
        color: red;
      }
    }

    &-option {
      margin: 5% 0% 1% 0%;
    }

    &-title {
      padding-bottom: 2%;
    }

    &-footer {
      position: absolute;
      bottom: 15px;
      right: 25px;
    }

    &-email {
      &-content {
        position: relative;
        width: 50%;
        padding: 20px;

        a.link {
          float: right;
        }

        &--submenu {
          width: 100%;
          padding: 3%;
          right: 0px;
          top: 20% !important;
          word-break: break-word;

          li:first-child {
            border-bottom: none;

            .well__icon {
              top: 11px !important;
            }

            .well__content {
              padding-top: 0px !important;
            }
          }

          li {
            padding-bottom: 1%;
            padding-top: 1%;
          }
        }

        &-list {
          height: 150px;
          overflow-y: auto;
        }

        @media maxTablet {
          width: 100%;
        }
      }

      &-subject {
        margin-bottom: 3% !important;
      }
    }

  }

  .segments{
      .word-break{
          word-break:break-all;
      }
  }
}