
panel_border_color = grey7;

panel() 
    border: solid 1px panel_border_color;
    font-size: 14px;
    background: white;
    position: relative;
    border-radius: base-border-radius;
    padding: 15px (gutter/2);
    

// Panels
// ------------------------------------------------

.ui

    .panel {
        panel();

        margin: 0 0 30px;

        .button { font-size:14px; }
    }

    .panel__heading {
        color: grey4;
        font-weight: light;
        line-height: 1.6;
        margin: 0 0 .5em 0;
    }

    .panel__heading--large {
        font-weight: 600;
        margin: 0 0 0.8em 0;
        font-size: 1.4em;
    }

    .panel__heading-bar {
        background: soft-grey;
        color: black;
        font-size: 18px;
        line-height: 1.5;
        padding: 8px 20px;
        margin: 0;
        border-bottom: solid 1px panel_border_color;
    }

    .panel__heading-icon {
        position: absolute;
        top: 19px;
        right: 0px;
        font-size: 16px;
        color: grey4;

        &:hover {
            color: grey2;
        }
    }

    .panel__more {
        width: 100%;
        font-size: 20px;
        text-align: center;
        display: block;
        color: grey7;
        line-height: 28px;
    }

    .panel__fieldset {

        > .form, 
        > .form__field {
            padding: 1.3em 0;
            border-top: solid 1px grey8;

            &:last-child {
                padding-bottom: 5px;
            }
        }

        // Hack to fix a webkit bug where legend doesn't respect margin and behave like a block element should
        legend {
            float: left;
        }

        // Used to help absolute positioning
        .form {
            position: relative;

            * { // Clear the float on the legend above
                clear: both;
            }
        }

        .form__field {

            margin-bottom: 0;

            .form__field {
                margin-top: 0.8em;

                .form__label {
                    display: none;
                }
            }

            .field__toggle .form__label {
                margin: 0;
            }

            p {

                a { // Used to style an edit link
                    float: right;
                }
            }
        }
    }


    // Variations
    // -------------------------------------------

    .panel--centered {
        text-align: center;
    }


    .panel--profile {
        text-align: center;
        padding-top: (gutter/2);
        padding-bottom: (gutter/2);

        h1 {
            margin: (gutter/2) 0 10px 0;
            font-size: 32px;
            line-height: 1;
            color: black;
        }

    }

    .panel--noPadding {
        padding: 0;
    }


    // Panel group
    // --------------------------------------------

    .panels {
        panel()
        padding: 0;
        margin: 0 0 30px;

        .panel {
            border-radius: 0px;
            border-width: 1px 0 0 0;
            margin: 0;
            box-shadow: none;
            background: transparent;

            &:first-child {
                border-top-width: 0;
            }
        }
    }

    // Contextual styling
    // ------------------------------------------

    .page__aside .panel {
        clear: both;
    }