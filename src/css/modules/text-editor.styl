
toolbar_size = 30px

// Editor Styles
// ------------------------------------------------

.ui
    
    .ta-scroll-window.form-control {
        overflow: auto; 
        font-family: inherit; 
        font-size: 100%; 
        position: relative; 
    }

    .ta-root.focussed .ta-scroll-window.form-control {
        outline: 0;
        box-shadow: 0px 0px 0px rgba(0,0,0,0);
        border: 0px;
    }

    .ta-scroll-window .ta-bind {
        height: auto; 
        min-height: 385px; 
        padding: (gutter/2);

        &:focus {
            outline: 0;
        }

        > :first-child {
            margin-top: 0;
        }

    }

    .ta-insert-video {
        background: url(/interface/images/video-embed.png) center no-repeat;
        background-size: cover;
        width: 100%;
        height: 0%;
        padding-bottom: 56.25%;
    }

    .ta-toolbar {
        background-color: soft-grey;
        border-bottom: solid 1px #e9e9e9;
        border-radius: 2px 2px 0 0;
        font-size: 0;

        .toolbar__group {
            display: inline-block;
            list-style: none;
            padding: 5px;
            padding-right: 0;
            margin: 0;

            // hide the bold/italic/underline on tablets/mobile as they are built into OS
            &:nth-child(2) {
                display: none;
            }

            &:last-child {
                border-right: none; 
            }

            @media minTablet {
                border-right: solid 1px grey7;
                padding: 0 10px;
                margin: 5px 0;
            }

            @media minDesktop {
                // show the bold/italic/underline on desktop
                &:nth-child(2) {
                    display: inline-block;
                }
            }
        }

        .toolbar__button {
            font-size: 16px;
            display:block;
            float: left;
            border: none;
            padding: 0;
            width: toolbar_size;
            height: toolbar_size;
            line-height: toolbar_size;
            text-align: center;
            border-radius: base-border-radius;
            color: black;
            background-color: transparent;
            font-family: "Times New Roman", serif;

            [class*="icon--"] {
                vertical-align: middle;
                position: relative;
            }

            &.is--active,
            &:hover {
                color: primary;
                cursor: pointer;
                text-decoration: none;
            }

            &.is--disabled,
            &:disabled {
                color: grey5;

                &:hover {
                    background-color: transparent;
                    cursor: default;
                    color: grey5;
                }

                .icon:after { opacity:0.35; }
            }
        }

        .colours__container {
            display: none;
            
            @media minTablet {
                display: block;
            }
        }
    }

    // -------------------------------------------------
    // old text exitor
    // text editor primary
    .text-editor {
    
        // Prevent the text contents of draggable elements from being selectable.
        [draggable] {
            -moz-user-select: none;
            -khtml-user-select: none;
            -webkit-user-select: none;
            user-select: none;
            // Required to make elements draggable in old WebKit
            -khtml-user-drag: element;
            -webkit-user-drag: element;
        }

        [contenteditable] {
            outline: 0px solid transparent;

            &:focus {
                outline: 0px solid transparent;
            }
        }

        .hide {
            display: none !important;
        }
    }

    // content area
    .text-editor__content {
        min-height: 150px;
        display: block;
        position: relative;
        margin-top: gutter;
        max-width: 560px;

        white-space: pre-wrap;
        word-wrap: break-word;

        > :first-child {
            margin-top: 0;
        }

        // placeholder text

        &.content--placeholder {

            // placeholder
            &:after {
                position: absolute;
                top: 0;
                left: 0;
                content: attr(data-placeholder);
                white-space: nowrap;
                color: grey6;
            }
            
        }

        img {
            cursor: move;

            &:hover {
                outline: dashed 1px rgba(0,0,0,0.3);
                opacity: 0.9;
            }
        }

    }

    // Toolbar
    .text-editor__toolbar {
        background-color: soft-grey;
        border-bottom: solid 1px #e9e9e9;
        border-radius: base-border-radius base-border-radius 0 0;
        font-size: 0;
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
    }

    .text-editor__toolbar-group {
        display: inline-block;
        list-style: none;
        padding: 5px;
        padding-right: 0;
        margin: 0;

        &:last-child {
            border-right: none; 
        }

        li {
            width: toolbar_size;
            height: toolbar_size;
            display: inline-block;
            font-size: 16px;
            border-radius: base-border-radius;
        }

        button {
            display: inline-block;
            border: none;
            padding: 0;
            width: toolbar_size;
            height: toolbar_size;
            line-height: toolbar_size;
            text-align: center;
            border-radius: base-border-radius;
            color: black;
            background-color: transparent;
            font-family: "Times New Roman", serif;

            [class*="icon--"] {
                font-size: 20px;
                vertical-align: text-top;
            }

            &:hover {
                background-color: rgba(0,0,0,0.05);
                color: primary;
                cursor: pointer;
                text-decoration: none;
            }

            &:disabled {
                color: grey4;

                &:hover {
                    background-color: transparent;
                    cursor: default;
                    color: grey4;
                }
            }
        }

        @media minTablet {
            border-right: dashed 1px #e2e2e2;
            padding: 5px 10px;
        }
    }

    .text-editor__progress {
        display: block;
    }