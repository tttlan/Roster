 .ui 

    .stats {

    }

    .stats--news {
        float: left;
        width: 100%;
    }

    .stats--news__pie-chart-wrapper {
        width: 50%;
        float: left;
        border-right: solid 1px grey7;
        margin-right: -1px;
        padding: 9px 10px 9px 9px;
    }

    .stats--news__statWrapper {
        width: 50%;
        float: left;
        padding: 0.8em 20px;
        position: relative;
        border-left: solid 1px grey7;

        &:hover {

            .icon--right {
                color: link-color-hover;
            }

            .stats--news__stat,
            .stats--news__stat span {
                color: link-color-hover;
            }
        }
        
        + .stats--news__statWrapper {
            border-top: solid 1px grey7;
        }

        .icon--right {
            color: grey6;
            font-size: 20px;
            position: absolute;
            right: 20px;
            top: 50%;
            margin-top: -10px;
        }
    }

    .stats--news__stat {
        font-size: 2.6em;
        margin: 0;
        line-height: 1;
        font-weight: 600;
        
        span {
            color: grey5;
            font-size: 0.32em;
            display: block;
            text-transform: uppercase;
            font-weight: 400;
        }
    }