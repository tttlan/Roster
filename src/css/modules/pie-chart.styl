.ui 

    .pie-chart {

        position:relative;
        font-size: 123px;
        width:1em;
        height:1em;

        &:before {
            content: '';
            display: block;
            border-radius: 0.5em;
            border: 0.12em solid grey7;
            width: 0.95em;
            height: 0.95em;
            position: absolute;
            top: 50%;
            left: 50%;
            margin: -0.475em 0 0 -0.475em;
            z-index: 1;
        }
    }

    .pie-chart__percent {

        position: absolute;
        left: 0;
        top: 50%;
        width: 100%;
        margin: -0.68em 0 0 0;
        font-size: 0.3em;
        font-weight: 600;
        line-height: 1;
        text-align:center;
    }

    .pie-chart__percentLiked {
        color: grey5;
        font-size: 0.32em;
        display: block;
        text-transform: uppercase;
        font-weight: 400;
    }

    .pie-chart__slice-wrapper {

        position:absolute;
        width:1em;
        height:1em;
        clip:rect(0px,1em,1em,0.5em);
        z-index: 10;

        &.pie-chart__slice-wrapper--gt50 {
            clip:rect(auto, auto, auto, auto);

            .pie-chart__slice--fill {
                display: block;
            }
        }
    }

    .pie-chart__slice {

        border: 0.14em solid positive;
        position:absolute;
        width: 1em;
        height: 1em;
        clip:rect(0em,0.5em,1em,0em);
        border-radius:0.5em; 
        transform: rotate(0deg);
        transition: transform 0.75s linear;
        opacity: 0;

        &.pie-chart__slice--fill {
            transform: rotate(180deg) !important;
            transition: none;
            display: none;
        }
    }
