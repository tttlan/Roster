
select_list_border = #eaeaea

// Selection Lists
// ------------------------------------------------

.ui 

    .selectList {
        clearfix();
        margin: 0;
        overflow:hidden;
        
        .field__checkbox {
            clear: both;
        }
    }

    .selectList__list {
        segment();

        overflow: hidden;
        padding: 0;
        margin: 0 0 5px 0;
        position: relative;
        border-color: select_list_border;


        // Responsive
        // ------------------------------------------------

        @media minTablet {
            width: 50%;
            float: left;

            &:first-child {
                border-top-right-radius: 0;
                border-bottom-right-radius: 0;
            }

            &:last-child {
                border-left: none;
                border-top-left-radius: 0;
                border-bottom-left-radius: 0;
            }
        }

    }

    .selectList__title {
        padding: (gutter/2);
        background: grey3;
        border-bottom: solid 1px grey2
        font-weight: normal;
        color: white;
        margin: 0;
    }

    .selectList__search {
        margin: 0;
        position: relative;
        border-bottom: solid 1px #f6f6f6

        input {
            border: none;
            margin: 0;
            background-color: transparent;
            padding-left: 34px;

            &:focus {
                box-shadow: none;
            }
        }
    }

    .selectList__content {
        overflow: auto;
        padding: 0;
        max-height: 176px;

        @media minTablet {
            max-height: none;
            height: 320px;
        }

        ul {
            list-style: none;
            padding: 0px
            margin: 0;
        }

        li {
            background: white;
            border: solid 1px transparent;
            border-bottom: solid 1px #f6f6f6;
        }

        .subject {
            display: block;
            padding: 10px 20px 10px 15px;
            font-size: 14px;
            position: relative;
            color: grey3;

            &:hover {
                color: primary;
                text-decoration: none;
                .subject__action {
                    opacity: 1;
                }
            }

            .subject__action {
                opacity: 0;
                position: absolute;
                top: 2px;
                line-height: 40px;
                right: 10px;
                text-transform: uppercase;
                font-size: 18px;
                color: grey6;
                transition: linear opacity 150ms;
                cursor:pointer;
            }
        }

        .selectList__note {
            font-size: 13px;
            padding: 10px 20px;
            color: grey4;
            display: block;
        }

    }

    .selectList__content--has-search {
        height: 278px;
    }

    // Sortable
    // -----------------------------------
    .sortable {
        .sortable-ghost {
            border:1px dashed grey4;
            opacity:0.5;
        }

        a {
             cursor: -webkit-grab; cursor: -moz-grab; cursor:grab;

            &:active {
                 cursor: -webkit-grabbing; cursor: -moz-grabbing; cursor:grabbing;
            }

            &:before {
                position:absolute;
                display:block;
                content:'';
                width:10px;
                top:0;
                left:0;
                bottom:0;
                
                opacity:0;
                transition: linear opacity 150ms;
                
                background-image: url("data:image/png;base64,");

            }
            &:hover {
                &:before {
                    opacity: 1;
                }
            }
            
        }

    }
