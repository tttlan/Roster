    .progress-list {
        list-style: none;
        margin: 0;
        padding: 0;

        .progress__title {
            font-size: 13px;
            line-height: 1;
            color: grey5;
            position: relative;
            text-transform: uppercase;
            border-bottom: solid 1px grey8;
            padding: 15px 20px;
            background-color: grey10;
            border-radius: 2px 2px 0 0;
        }

        .progress__step {
            width: 100%;
            height: auto;
            border-bottom: solid 1px grey8;

            &:last-child {
                border-bottom: 0px;
            }

            .step__item {
                display: block;
                padding: 20px 20px 20px 70px;
                font-size: 16px;
                line-height: 20px;
                min-height: 52px;
                position: relative;
                color: grey3;

                @media print {
                    padding-left: 20px;
                }
            }

            a.step__item:hover {
                text-decoration: none;
                background-color: grey9;
            }

            .step__title ,
            .step__description {
                display: block;
                word-wrap: break-word;
            }

            .step__title {
                font-weight: normal;
                font-size: 16px;
            }

            .step__description {
                font-size: 13px;
                line-height: 1.4;
                color: grey5;
                margin-top: 2px;
            }

            .step__number {
                position: relative;
                display: block;
                absolute: top 50% left 20px;
                background-color: grey8;
                margin-top: -16px;
                width: 32px;
                height: 32px;
                border-radius 32px;
                z-index: 3;

                @media print {
                    display: none;
                }

                box-shadow: inset 1px 1px 1px rgba(0,0,0,0.05);

                &:after {
                    content: '';
                    width: 12px;
                    height: 12px;
                    background: grey7;
                    border-radius: 12px;
                    position: absolute;
                    top: 10px;
                    left: 10px;
                    opacity: 0;
                }
            }

        }


        // States
        // ------------------------------------------------

        .progress__step--complete {
            .step__item {
                color: black;
            }
            .step__number {
                tick-icon()

                background: positive;
                color: white;
                line-height: 32px;

                box-shadow: inset 0px 0px 0px rgba(0,0,0,0);

            }
        }

        .progress__step--active {

            .step__number:after {
                opacity: 1;
                background:positive;
            }
        }

        .progress__step--next {

            .step__number:after {
                opacity: 1;
            }
        }

        .progress__step--complete.progress__step--active {
            .step__number:after {
                opacity: 0;
            }
        }

    }


    .progress-list--collapsed {
        position: relative;
        top: -20px;
        left: -20px

        .progress__title {
            display: none;
        }

        .progress__step {

            .step__item {
                display: block;
                padding: 0;
                margin: 0 13px;
                height: 60px;
            }

            .step__title ,
            .step__description {
                display: none;
            }
        }
    }

