    .progress-steps {
        clearfix();

        list-style: none;
        padding: 0;
        margin: 0 0 gutter 0;
        position: relative;
        z-index: 2;
        background-color: step_bg;
        border: solid 1px grey8;
        border-radius: base-border-radius;

        .progress__step {
            float: left;
            height: step_height;

            &:last-child .step__item:before ,
            &:last-child .step__item:after {
                display: none;
            }

            &:first-child {
                .step__item {
                    border-top-left-radius: base-border-radius;
                    border-bottom-left-radius: base-border-radius;
                }
            }

            &:last-child {
                .step__item {
                    border-top-right-radius: base-border-radius;
                    border-bottom-right-radius: base-border-radius;
                }
            }
        }

        .step__item {
            line-height: 24px;
            display: block;
            font-size: 13px;
            text-align: center;
            color: grey4;
            position: relative;
            padding: 8px 0;
            height: step_height;

            &:hover {
                text-decoration: none;
            }

            &:before ,
            &:after {
                content: '';
                position: absolute;
                top: 0;
                border-top: 20px solid transparent;
                border-bottom: 20px solid transparent;
                border-left: 15px solid;
                right: -7px;
            }

            &:after{
                z-index: 2;
                border-left-color: step_bg;
            }

            &:before{
                border-left-color: step_border_color;
                right: -8px;
                z-index: 1;
            }

        }

        .step__title ,
        .step__description {
            display: none;
        }

        .step__number {
            display: inline-block;
            text-align: center;
            border-radius 24px;
            background-color: rgba(0,0,0,0.05);
            width: 24px;
            height: 24px;
            line-height: 24px;
            margin-right: 3px;
            font-size: 14px;

            &:before {
                content: attr(data-text);
            }

        }

    }

    .progress-step--2 {
        .progress__step {
            width: 50%;
        }
    }

    .progress-steps--3 {
        .progress__step {
            width: 33.3%;
        }
    }

    .progress-steps--4 {
        .progress__step {
            width: 25%;
        }
    }

    .progress-steps--5 {
        .progress__step {
            width: 20%;
        }
    }

    // Tablet and upwards

    @media minTablet {

        .progress-steps {
            .progress__step .step__title {
                display: inline;
            }
        }

    }


    // Progress States
    // ------------------------------------------------

    tick-icon()
        icon();
        text-align: center;
        line-height: 24px;
        &:before { content: icon-check; }


    .progress-steps {

        .progress__step--active {
            .step__item {
                background-color: white;
                color: base-font-color;

                &:after{
                    border-left-color: white;
                }

                &:before{
                    border-width: 20px 0 20px 15px;
                    border-color: step_bg step_bg step_bg transparent;
                    right: -7px;
                }
            }
        }

        .progress__step--complete {
            .step__item {
                background-color: step_bg_active;
                color: white;

                &:after{
                    border-left-color: step_bg_active;
                }

                .step__number {
                    tick-icon()
                }
            }
        }

        .progress__step--previous {
            .step__item {
                background-color: step_bg_active;
                color: white;

                &:after{
                    border-left-color: step_bg_active;
                }

                &:before{
                    border-width: 20px 0 20px 15px;
                    border-color: white white white transparent;
                    right: -7px;
                }

                .step__number {
                    tick-icon()
                }
            }
        }

    }


