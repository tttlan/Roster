// Default file
//
// Markup:
// <div class="file">
//     <div class="file__content">
//         <i class="svg-icon--pdf"></i>
//         <p class="file__name">Filename</p>
//         <ul class="file__meta">
//             <li>2 MB</li>
//             <li> - <a href="http://" target="_self">download</a></li>
//         </ul>
//     </div>
// </div>
//
// Styleguide modules.file.default

.ui

    .file {

        .file + .file {
            margin:(gutter / 4) 0;
        }

        .file__content {
            position:relative;
            z-index: 4;
            padding: 10px 0 10px 38px;
            min-height: 52px;
        }

        .file__name {
            font-size: 14px;
            line-height: 16px;
            margin: 0;
            word-wrap: break-word;

            small { display:block; }
        }

        .file__meta {
            font-size: 11px;
            line-height: 16px;
            display: block;
            list-style: none;
            padding: 0;
            margin: 0;
            color: grey6;

            li {
                display: inline-block;
            }
        }

        .file__cancel {

        }

        .file__status {
            text-transform: uppercase;
            font-size: 16px;
            line-height: 20px
            min-width: 16px;
            position: absolute;
            top: 50%;
            right: 0;
            margin-top: -11px;

            span {
                font-size: 11px;
                margin-right: 4px;
            }

            [class*="icon--round-"] {
                vertical-align: middle;
            }

            .icon--round-cross,
            .icon--round-minus {
                color: negative;
            }

            .icon--round-check {
                color: positive;
            }
        }

        .loading-spinner {
            position: absolute;
            top: 3px;
            left: 1px;
            opacity: 0.75;
        }

        .file__progress {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: 3;

            .progress-bar {
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                padding: 0;
                background: transparent;
                overflow: hidden;
            }

            .progress-bar__range:after {
                content: '';
                position: absolute;
                top: 0;
                bottom: 0;
                right: -3px;
                width: 3px;
                background: #d0e1bf;
            }
        }

        // File icons
        
        [class*="svg-icon--"] {
            font-size: 32px;
            position: absolute;
            top: 10px;
            left: 1px;
        }

        &.file--large {
          padding-left: 10px;
          padding-right:  10px;
          .file__content {
            width: 100%
            padding: 25px 15px 25px 70px;
            [class*="svg-icon--"] {
              font-size: 64px;
            }
            .file__remove-icon {
              text-decoration: none;
            }
          }
        }

        // Canvas Preview

        .file__thumb {
            position: absolute;
            border-radius: 2px;
            top: 10px;
            left: -2px;
            width: 32px;
            height: 32px;
            z-index: 4;
        }

    }

    .file--success { }

    .file--error { outline: dotted 1px negative; }

    .file--loading {

        .file__image:after ,
        .file__content:after {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            bottom: 0;
            right: 0;
            background: rgba(255,255,255,0.45);
            border-radius: 3px;
        }

    }

    // Is file displaying as an image preview
    // ------------------------------------------

    .file__image {

        img {
            max-width:100%;
            max-height: 500px;
        }
    }

    .file__image--zoomable {
        cursor: pointer;
        position: relative;

        &:hover {
            opacity: 0.9
        }
    }

    // File in a block
    //
    // Markup:
    // <div class="file file--block">
    //     <div class="file__content">
    //         <i class="svg-icon--pdf"></i>
    //         <p class="file__name">Filename</p>
    //         <ul class="file__meta">
    //             <li>1 MB</li>
    //             <li> - <a href="http://" target="_self">download</a></li>
    //         </ul>
    //     </div>
    // </div> 
    //
    // Styleguide modules.file.block

    .file--block {
        .file__content {
            whiteWithBorder();
            display:inline-block;
            border-radius:base-border-radius;
            padding-left: 44px;
            padding-right: 15px;
        }

        [class*="svg-icon--"] {
            left: 10px;
        }
    }



    // File Properties editor (used by the uploader)
    // ------------------------------------------

    .file__properties {
        border-top: solid 1px #eeedef;
        position: relative;
        margin: 15px 0 10px 0;
        padding: 15px 0 0 0

        &:after,
        &:before {
            content: '';
            z-index: 2;
            position: absolute;
            top: -13px;
            left: 10px;
            border: solid 6px;
            border-color: transparent transparent #e7e7e7 transparent
        }

        &:before {
            z-index: 3;
            top: -12px;
            border-color: transparent transparent #fcfcfc transparent
        }

        .field__checkbox {
            position: relative;
            top: -10px
        }
    }
