// Overlays
//
// Adding the class overlays--fixed to the ul element positions the notificaions to the bottom right of the screen
//
// Markup:
// <ul class="overlays">
//     <li class="overlay {{modifier_class}}">
//         <a class="overlay__close"><i class="icon--cross"></i></a>
//         <div class="overlay__icon"><i class="icon--help"></i></div>
//         <p class="overlay__message">I'm a overlay message with <a href="">a link</a></p>
//     </li>
// </ul>
//
// .overlay--success - Success overlay, use this to convey come good news
// .overlay--warning - Warning overlay, use this to warn of a potential problem
// .overlay--error - Error overlay, use this to explain an error
//
// Styleguide modules.overlays.standard

.ui
    
    .overlays {
        padding: 0;
        width: 100%;
        margin: 0;

        &.overlays--fixed {
            position: fixed;
            z-index: 1500
        }

        @media print {
            display: none;
        }
    }
    .overlay { 
        display: table;
        clearfix();
        width: 100%;
        height: 100%;
        background: transparent;
        position: fixed;
        top: 0;
        left: 0;
        margin: 0;
        border-radius: 0;
        overflow: hidden;
        transition: all ease-in 250ms;
        &.ng-hide {
            opacity: 0;
            //display: none;
        }
        &.ng-enter {
            opacity: 0;
            transition: all cubic-bezier(0.250, 0.460, 0.450, 0.940) 125ms;
            //transform: translate(0, 100px);
        }

        &.ng-enter.ng-enter-active {
            opacity: 1;
            //transform: translate(0, 0);
        }
    }
    .overlay__background {
        position: absolute;
        width: 100%;
        height: 100%;
        background: white;
        opacity: 0.8;
        top: 0;
        left: 0;
    }
    .overlay__content {
        position: relative;
        display: table-cell;
        vertical-align: middle;
        text-align: center;
        background: transparent;
        h1 {
            margin-bottom: 20px;
        }
    }
    .overlay__title {
        color: positive;
    }

    .overlay__close {
        position: absolute;
        top: 0;
        right: 0;
        font-size: 16px;
        color: #292724;
        text-align: center;
        cursor: pointer;
        cursor: pointer;
        background: url("/interface/images/button--close-x.png") center no-repeat;
        width: 66px;
        height: 66px;
        cursor: pointer;
        &:hover {
            text-decoration: none;
        }
    }

    .overlay__message {
        margin: 14px 0;
        line-height: 16px;
        font-size: 14px;
        color: #a2a2a2;
    }

    .overlay__icon {
        color: positive;
        width: auto;
        text-align: center;
        position: relative;
        font-size: 150px;
        line-height: 1;
    }



    // overlays States
    // ------------------------------------------------

    .overlay--error {
        border-color negative;

        .overlay__icon {
            color: negative
        }
    }

    .overlay--success {
        border-color positive;

        .overlay__icon {
            color: positive
        }
    }

    .overlay--warning {
        border-color caution;

        .overlay__icon {
            color: caution
        }
    }



    // Offline overlay
    //
    // Use this to notify the user that they are currently offline
    //
    // Markup:
    // <div class="overlay overlay--offline" style="position: relative;">
    //     <div class="overlay__icon"><i class="icon--wifi"></i></div>
    //     <p class="overlay__message">No internet connection</p>
    // </div>
    //
    // Styleguide modules.overlays.offline


    .overlay--offline {
        background-color: negative;
        border: none;
        width: 230px;
        box-shadow: 0 0 10px rgba(0,0,0,0.1);
        z-index: 1010;
        top: 80%;
        left: 50%;
        position: fixed;
        margin-left: -115px;
        opacity: 1;

        transition: 100ms linear all;

        @media minTablet {
            top: 90%;
        }

        .overlay__icon {
            color: white
        }

        .overlay__message {
            color: white;
            text-transform: uppercase;
        }

        &.ng-hide {
            opacity:0;
        }

        &.ng-hide-add, 
        &.ng-hide-remove {
          /* this needs to be here to make it visible during the animation
             since the .ng-hide class is already on the element rendering
             it as hidden. */
            display: block!important;
        }

    }
