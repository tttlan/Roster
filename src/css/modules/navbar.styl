
// Grey nav bar
// ------------------------------------------------


.navbar {
    width: 100%;
    min-height: 48px;
    border-bottom: solid 1px #e9e9e9;
    z-index: 200;
    background-color: rgba(255,255,255,0.97);
    position: absolute;
    top: header-height;
    left: 0;

    @media minTablet {
        .body--header-compact & {
            width: auto;
            border: none;
            margin: 8px 0;
            background: transparent;
            top: 0; 
            left: 83px;
        }
    }

    @media minDesktop {
        position: static;
        float: left;
        width: auto;
        border: none;
        margin: 8px 3px;
    }

    @media print {
        display: none !important;
    }

    .navbar__wrapper {
        wrapper();
        clearfix();

        @media maxTablet {
            padding: 0;
        }
        @media minTablet {
            padding: 0 20px;
        }
        @media minDesktop {
            padding: 0 0 0 30px;
        }
    }

    .nav {
        border-bottom: 0;
        margin-bottom: 0;
        width: 100%;
        display: table;
        height: subnav-height;

        > li {
            display: table-cell;

            &:last-child a {    
                border-right: 0px;
            }

            > a {
                display: block;
                width: 100%;
                text-align: center;
                padding-top: 13px;
                height: subnav-height;
                border-right: solid 1px grey8;
                color: grey4;
                font-size: 13px;

                .link-icon {
                    font-size: 20px;
                }

                span {
                    display: none;
                    text-transform: uppercase;
                }

                &:hover {
                    color: primary;
                }

                &.is--active {
                    background-color: primary;
                    color: white;
                }
            }
        }

        // Responsive

        @media minTablet {
            display: block;
            
            > li {
                padding-right: 30px;
            
                > a {
                    border-right: 0;
                    padding-top: 0px;
                    text-align: left;
                    width: auto;
                    line-height: 47px;
                    display: inline-block;

                    .link-icon {
                        display: none;
                    }

                    span {
                        display: block;
                    }

                    &.is--active {
                        background-color: transparent;
                        color: primary;
                    }
                }

            }

        }

    }

}


@media minTablet {

     .body--header-compact {

        .navbar {
            margin-top: 0;
            margin-bottom: 0;
        }

    }

}
