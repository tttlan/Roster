// The sidebar can be used alongside a listing of cards to filter the cards.
//
// Markup:
// <div class="sidebar">
//     <h1>News</h1>
//     <span ng-click="showCats = !showCats" class="sidebar__toggle">Change category <i class="icon--down"></i></span>
//     <ul class="sidebar__categories" ng-show="showCats">
//         <li><a href="" class="is--active">All News <i class="icon--right"></i></a></li>
//         <li><a href="">Current <i class="icon--right"></i></a></li>
//         <li><a href="">Archived <i class="icon--right"></i></a></li>
//     </ul>
// </div>  
// 
// Styleguide modules.sidebar.sidebar

.ui

    .sidebar {
        text-align: center;

        @media minTablet {
            text-align: left;
        }

    }

    .sidebar__toggle {
        color: grey6;
        font-size: 14px;
        text-transform: uppercase;
        margin-bottom: 25px;
        cursor: pointer;
        line-height: 24px;
        display: inline-block;

        [class*="icon--"] {
            font-size: 10px;
            margin-left: 0.3em;
        }

        &:hover {
            color: primary;
        }

        @media minTablet {
            display: none;
        }
    }


    // categories list
    // --------------------------------------------------------

    .sidebar__categories {
        text-transform: uppercase;
        font-size: 13px;
        list-style: none;
        padding: 0;
        margin: 0;
        background: white;
        border-right: solid 1px grey8;
        border-radius: base-border-radius;

        position: absolute;
        top: 92px;
        left: 50%;
        width: 180px;
        margin-left: -90px;
        z-index: 10;
        box-shadow: 0px 0px 6px rgba(0,0,0,0.1)

        &:after ,
        &:before {
            content:'';
            position: absolute;
            top: -24px;
            left: 50%;
            margin-left: -12px;
            border: solid 12px;
            border-color: transparent transparent white transparent;
        }

        &:before {
            top: -25px;
            border-color: transparent transparent grey7 transparent;
        }

        @media minTablet {
            position: relative;
            top: 0;
            left: 0;
            margin: 0;
            box-shadow:  0px 0px 0 rgba(0,0,0,0)
            display: block !important;
            width: auto;

            &:after ,
            &:before { display: none; }
        }

        li {
            margin: 0;

            &:first-child a {
                border-radius: base-border-radius base-border-radius 0 0;
            }

            &:last-child a {
                border-radius: 0 0 base-border-radius base-border-radius;
            }
            
            &:first-child:last-child a {
                border-radius: base-border-radius;
            }

            a {
                color: grey4;
                display: block;
                padding: 10px 30px 10px 15px;
                border-bottom: solid 1px grey8;
                transition: all 150ms ease;
                position: relative;

                &:hover,
                &.is--active {
                    color: white;
                    text-decoration: none;
                    background-color: primary;
                }

                i {
                    position: absolute;
                    top: 50%;
                    margin-top: -6px;
                    right: 10px;
                    color: white !important;
                    font-size: 11px;
                }
            }
        }
    }
