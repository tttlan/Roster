[
    {
        "id": "changePasswordForm",
        "name": "changePasswordForm",
        "action": "/get/",
        "method": "post",
        "elements": [
            {
                "name": "OldPwd",
                "label": "Old password",
                "placeholder": "Enter your old password",
                "value": "",
                "type": "password",
                "class": "",
                "validation": {
                    "required": true
                }
            },
            {
                "name": "NewPwd",
                "label": "New password",
                "placeholder": "Enter a new password",
                "value": "",
                "class": "",
                "type": "password",
                "validation": {
                    "required": true,
                    "passwordStrength": true
                }
            },
            {
                "name": "ConfirmNewPwd",
                "label": "Re-enter password",
                "placeholder": "Re-enter your new password",
                "value": "",
                "class": "",
                "type": "password",
                "validation": {
                    "required": true,
                    "isEqual": "NewPwd",
                    "customErrorMessage": "Make sure your re-entered password matches your new password"
                }
            },
            {
                "name": "submitForm",
                "value": "Update password",
                "type": "submit-button",
                "class": "button--small button--positive"
            }
        ]
    }
]