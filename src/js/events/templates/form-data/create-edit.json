                }
            },
            {
                "name": "Invitees",
                "label": "Invitees",
                "placeholder": "",
                "val": "",
                "type": "checkbox",
                "class": "event-form__field-invitees",
                "validation": {
                    "required": true
                }
            },
            {
                "name": "submitForm",
                "placeholder": "",
                "value": "Submit",
                "type": "submit-button"
            }
        ]
    }
