                "label": "Final RSVP date",
                "val": "",
                "type": "date-time",
                "class": "field__edit",
                "validation": {
                    "required": false,
                    "dateFuture": true,
                    "dateBefore": "StartDate",
                    "customErrorMessage": "The RSVP date and time must be before the start date and time of the event"
                }
            },
            {
                "name": "MaxAttending",
                "label": "Limited spots available",
                "val": "",
                "type": "number",
                "class": "",
                "validation": {
                    "required": false,
